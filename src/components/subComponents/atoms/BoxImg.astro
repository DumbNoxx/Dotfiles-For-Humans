---
import type { BoxIgmProps } from "@libs/index";
import { Image } from "astro:assets";
const { label, img, className = "" } = Astro.props as BoxIgmProps;
---
<div class={className}>
  <figure class="box-imagen">
    <Image
    src={img}
    alt={label}
    />
    <figcaption class="overlay">
      <p class="overlay-text">{label}</p>
    </figcaption>
  </figure>
</div>
