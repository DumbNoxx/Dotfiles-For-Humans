---
import type { DetailsProps } from "@libs/index";
import { Svgs } from "@widget/index";
const { summary, text, text2, svg, className = "" } = Astro.props as DetailsProps;
---
<details class={className}>
  <summary class="details-title">{summary} <Svgs nameSVG={svg} /></summary>
  <div class="text-details">
    <p>
      {text}
      <br />
      <br />
      {text2}
    </p>
  </div>
</details>